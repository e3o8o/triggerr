{
  "name": "triggerr",
  "version": "0.1.0",
  "packageManager": "bun@1.2.15",
  "private": true,
  "description": "A modern insurance platform built on Paygo.",
  "author": {
    "name": "Elem Oghenekaro",
    "email": "elemoghenekaro@gmail.com",
    "url": "https://github.com/e3o8o"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/e3o8o/triggerr.git"
