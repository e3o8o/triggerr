  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/**/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run packages/core/database/migrate.ts",
    "db:fix-migration": "bun run scripts/fix-migration.ts",
    "db:apply-new-migration": "bun run scripts/apply-new-migration.ts",
    "db:check-schema": "bun run scripts/check-schema.ts",
    "db:fix-missing-columns": "bun run scripts/fix-missing-columns.ts",
    "test:encryption": "bun run scripts/test-encryption.ts",
    "test": "bun test --ignore='**/dist/**' --ignore='**/packages/services/wallet-service/src/__tests__/**'",
    "test:working": "bun test tests/ packages/blockchain/paygo-adapter/ packages/api/sdk/ packages/services/escrow-engine/ packages/services/wallet-service/src/__tests__/repository.test.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run packages/core/database/seed.ts",
    "clean": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf apps/*/node_modules",
    "setup": "bun install && cd apps/web && bun install && cd ../.. && echo 'âœ… Setup complete! Run \\`bun dev\\` to start the development server.'"
  },
