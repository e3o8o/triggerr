    },
    {
      "path": "./packages/blockchain/blockchain-interface"
    },
    {
      "path": "./packages/blockchain/paygo-adapter"
    },
    {
      "path": "./packages/blockchain/service-registry"
    },
    {
      "path": "./packages/integrations/stripe-adapter"
    },
    {
      "path": "./packages/integrations/flightaware-adapter"
    },
    {
      "path": "./packages/integrations/aviationstack-adapter"
    },
    {
      "path": "./packages/integrations/opensky-adapter"
    },
    {
